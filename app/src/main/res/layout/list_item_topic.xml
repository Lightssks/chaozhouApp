<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/image8" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_image"
        android:text="你好，世界"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView

        android:id="@+id/topic_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/user_image"
        android:text="Nemo"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <com.example.chaozhou.widget.FlowImageLayout
        android:id="@+id/image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topic_content"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/user_image" />


    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_marginLeft="60dp"
        android:layout_below="@+id/image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/content_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="left"
            android:text="19:04"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:id="@+id/list_item_line_2"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_below="@+id/image_layout"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content">
        <ImageButton

            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:id="@+id/image_button_message"
            android:src="@drawable/logo_message"
            android:layout_width="wrap_content"
            android:background="#00000000"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignLeft="@+id/image_button_message"
            android:gravity="center"
            android:layout_below="@id/image_button_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
