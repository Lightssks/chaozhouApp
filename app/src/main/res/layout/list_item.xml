<?xml version="1.0" encoding="utf-8"?>
<!--每行/可用于我的评论布局-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:paddingBottom="10dp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">

    <ImageView
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:id="@+id/list_item_image"
        android:src="@mipmap/ic_launcher"
        android:layout_width="96dp"
        android:layout_height="96dp" />

    <TextView
        android:textStyle="bold"
        android:maxLength="15"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_toRightOf="@id/list_item_image"
        android:id="@+id/list_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView

        android:id="@+id/list_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_name"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/list_item_image"
        android:text="Nemo"
        android:maxLines="2"
        android:textColor="@android:color/black"
        android:textSize="14sp" />


       <ImageButton
           android:layout_below="@id/list_item_content"
           android:paddingRight="20dp"
           android:layout_alignParentRight="true"
           android:src="@mipmap/ic_launcher"
           android:id="@+id/list_item_button"
           android:layout_width="wrap_content"
           android:background="#00000000"
           android:layout_height="wrap_content" />
       <TextView
           android:layout_below="@+id/list_item_button"
           android:layout_alignLeft="@+id/list_item_button"
           android:id="@+id/list_item_image_text"
           android:textColor="#000000"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

</RelativeLayout>