<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MapTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">@color/main_color</item>
        <item name="colorAccent">@color/main_color</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@color/main_color</item>
    </style>

    <style name="Comment" parent="android:TextAppearance">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="KaleTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 解决activity切换时的黑屏问题 -->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="MainTheme" parent="MapTheme">
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="RouteDetailTheme" parent="MapTheme">
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="WelfareActivityTheme" parent="MapTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="PictureActivityTheme" parent="MapTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--透明状态栏-->
        <item name="android:windowTranslucentStatus">true</item>
        <!--透明导航栏-->
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <style name="AboutTheme" parent="MapTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="SplashTheme" parent="MapTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--透明状态栏-->
        <item name="android:windowTranslucentStatus">true</item>
        <!--透明导航栏-->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@android:color/transparent</item>
    </style>

</resources>
